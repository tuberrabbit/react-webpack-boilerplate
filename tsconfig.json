{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "pretty": true,
    "suppressExcessPropertyErrors": true,
    "outDir": "dist_ts/",
    "baseUrl": "src/",
    "allowJs": true,
    "checkJs": true,
    "jsx": "React",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true,
  "files": [
    "typings/index.d.ts"
  ]
}
